<div class="post">
	<h2 class="title">${post.Title}</h2>
	<div class="author">By ${post.AuthorRealName}</div>
	<div class="content">!{post.Content}</div>
	<div class="footer">
		Published on <if condition='post.DatePublished.HasValue'>${post.DatePublished.Value.ToShortDateString()}</if>
	</div>
</div>