<div class="post">
	<h2 class="title">!{Html.ActionLink<PostController>(c => c.Show(post.Slug), post.Title)}</h2>
	<div class="author">By ${post.AuthorRealName}</div>
	<div class="content">!{post.Content}</div>
	<div class="footer">
		<div>Published on <if condition='post.DatePublished.HasValue'>${post.DatePublished.Value.ToShortDateString()}</if></div>
		<div class="tags">
			!{this.GetLinksForTags(post.TagsList)}
		</div>
	</div>
</div>