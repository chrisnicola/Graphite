<div class="comments">
	<div each="var comment in Model.Post.Comments" class="comment">
		<div class="header">
			${comment.Author} | <a href="${comment.WebAddress}">${comment.WebAddress}</a>
		</div>
		<div class="content">!{comment.Content}</div>
		<div clas="footer">!{comment.DatePosted}</div>
	</div>
</div>